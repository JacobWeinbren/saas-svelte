{
    "name": "saas-svelte",
    "version": "1.0.0",
    "description": "A Svelte implementation of the open-source SaaS Design System",
    "license": "MIT",
    "type": "module",
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./components": {
            "types": "./dist/components/index.d.ts",
            "svelte": "./dist/components/index.js",
            "default": "./dist/components/index.js"
        },
        "./components/*": {
            "types": "./dist/components/*/index.d.ts",
            "svelte": "./dist/components/*/index.js",
            "default": "./dist/components/*/index.js"
        },
        "./layout": {
            "types": "./dist/layout/index.d.ts",
            "svelte": "./dist/layout/index.js",
            "default": "./dist/layout/index.js"
        },
        "./layout/*": {
            "types": "./dist/layout/*/index.d.ts",
            "svelte": "./dist/layout/*/index.js",
            "default": "./dist/layout/*/index.js"
        },
        "./typography": {
            "types": "./dist/typography/index.d.ts",
            "svelte": "./dist/typography/index.js",
            "default": "./dist/typography/index.js"
        },
        "./typography/*": {
            "types": "./dist/typography/*/index.d.ts",
            "svelte": "./dist/typography/*/index.js",
            "default": "./dist/typography/*/index.js"
        },
        "./utilities": {
            "types": "./dist/utilities/index.d.ts",
            "svelte": "./dist/utilities/index.js",
            "default": "./dist/utilities/index.js"
        },
        "./utilities/*": {
            "types": "./dist/utilities/*/index.d.ts",
            "svelte": "./dist/utilities/*/index.js",
            "default": "./dist/utilities/*/index.js"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "build:package": "svelte-kit sync && svelte-package -o dist",
        "preview": "vite preview",
        "check": "svelte-kit sync && tsc --noEmit",
        "check:watch": "svelte-kit sync && tsc --noEmit --watch",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "peerDependencies": {
        "@saas-ui/tailwind-preset": "^0.0.2-next.0",
        "svelte": "^5.0.0"
    },
    "peerDependenciesMeta": {
        "@saas-ui/tailwind-preset": {
            "optional": true
        }
    },
    "dependencies": {
        "@ark-ui/svelte": "^5.15.0",
        "@tanstack/svelte-virtual": "^3.13.18",
        "clsx": "^2.1.1",
        "phosphor-svelte": "^3.1.0",
        "runed": "^0.37.1",
        "sveltekit-superforms": "^2.29.1",
        "tailwind-merge": "^3.4.0",
        "tailwind-variants": "^3.2.2",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@fontsource-variable/inter": "^5.2.8",
        "@saas-ui/tailwind-preset": "^0.0.2-next.0",
        "@storybook/addon-a11y": "^10.2.0",
        "@storybook/addon-docs": "^10.2.0",
        "@storybook/addon-links": "^10.2.0",
        "@storybook/addon-svelte-csf": "^5.0.10",
        "@storybook/addon-vitest": "^10.2.0",
        "@storybook/svelte": "^10.2.0",
        "@storybook/sveltekit": "^10.2.0",
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/kit": "^2.50.1",
        "@sveltejs/package": "^2.5.7",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@tailwindcss/vite": "^4.1.18",
        "@vitest/browser-playwright": "^4.0.18",
        "@vitest/coverage-v8": "^4.0.18",
        "@vueless/storybook-dark-mode": "^10.0.6",
        "playwright": "^1.58.0",
        "prettier": "^3.8.1",
        "prettier-plugin-svelte": "^3.4.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "storybook": "^10.2.0",
        "svelte": "^5.48.2",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    }
}
